<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hbteam.menuapplication.Activity.Locateus">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="6dp"
        app:cardBackgroundColor="#0000"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView"
                android:text="International Office"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/transparentBlack"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textviewLab"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageView"
                android:paddingTop="10dp"
                android:text="International Office

Level 1, 139 Macquarie St.,
Sydney, NSW 2000, PO Box R1784,
Royal Exchange NSW 1225,
Australia.

Ph : +2 42951789

 "
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/transparentBlack"
                android:textSize="18sp" />



        </LinearLayout>

    </android.support.v7.widget.CardView>





    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="6dp"
        app:cardBackgroundColor="#0000"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView"
                android:text="India office and Manufacturing plant"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/transparentBlack"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_margin="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textviewLab"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageView"
                android:paddingTop="10dp"
                android:text="India office and Manufacturing plant

SH 9, Idar Road,Dhandha,
Himmatnagar 383001,
Gujarat,
India.

Ph: +91 2772 222 684"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/transparentBlack"
                android:textSize="18sp" />



        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
